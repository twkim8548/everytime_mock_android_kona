<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_top_tool_bar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/home_top_everytime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="에브리타임"
            android:textColor="@color/bottomview_select"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/home_top_univ_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/home_top_everytime_tv"
            app:layout_constraintTop_toBottomOf="@id/home_top_everytime_tv"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"
            android:text="소프트대"/>


        <FrameLayout
            android:id="@+id/home_top_search_img"
            android:layout_width="43dp"
            android:layout_height="43dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/home_top_mypage_img"
            android:layout_marginTop="1dp"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_margin="9dp"
                android:src="@drawable/home_frag_search" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/home_top_mypage_img"
            android:layout_width="43dp"
            android:layout_height="43dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="1dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/home_frag_mypage" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_top_tool_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:descendantFocusability="blocksDescendants">
            <HorizontalScrollView
                android:id="@+id/home_top_horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="170dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/home_top_card_one"
                        android:layout_width="300dp"
                        android:layout_height="180dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/timetable_border"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/home_top_card_one_bulb"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/home_top_car_kira"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/home_top_card_one_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="초간단 학점 계산 방법"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/home_top_card_one_bulb"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/home_top_card_one_explain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이번 학기 예상 학점 계산해보자!"
                            android:textSize="12sp"
                            android:textColor="#f3a42d"
                            app:layout_constraintStart_toStartOf="@id/home_top_card_one_title"
                            app:layout_constraintTop_toBottomOf="@id/home_top_card_one_title" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/home_top_card_one_inf"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/home_top_border"
                            android:padding="6dp"
                            app:layout_constraintStart_toEndOf="@id/home_top_card_one_bulb"
                            app:layout_constraintTop_toBottomOf="@id/home_top_card_one_explain">

                            <TextView
                                android:id="@+id/home_top_card_one_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="자세히"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="7dp"
                                app:layout_constraintTop_toTopOf="parent" />
                            <ImageView
                                android:id="@+id/home_top_card_one_arrow"
                                android:layout_width="10dp"
                                android:layout_height="20dp"
                                android:src="@drawable/home_detail"
                                app:layout_constraintStart_toEndOf="@id/home_top_card_one_tv"
                                app:layout_constraintTop_toTopOf="@id/home_top_card_one_tv"
                                app:layout_constraintBottom_toBottomOf="@id/home_top_card_one_tv"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/home_top_card_two"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/timetable_border"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/home_top_card_two_bulb"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/home_top_car_kira"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/home_top_card_two_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="수강한 강의에 만족한다면?"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/home_top_card_two_bulb"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/home_top_card_two_explain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="강의평 작성하고 포인트 모으기"
                            android:textSize="12sp"
                            android:textColor="#f3a42d"
                            app:layout_constraintStart_toStartOf="@id/home_top_card_two_title"
                            app:layout_constraintTop_toBottomOf="@id/home_top_card_two_title" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/home_top_card_two_inf"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/home_top_border"
                            android:padding="6dp"
                            app:layout_constraintStart_toEndOf="@id/home_top_card_two_bulb"
                            app:layout_constraintTop_toBottomOf="@id/home_top_card_two_explain">

                            <TextView
                                android:id="@+id/home_top_card_two_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="자세히"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="7dp"
                                app:layout_constraintTop_toTopOf="parent" />
                            <ImageView
                                android:id="@+id/home_top_card_two_arrow"
                                android:layout_width="10dp"
                                android:layout_height="20dp"
                                android:src="@drawable/home_detail"
                                app:layout_constraintStart_toEndOf="@id/home_top_card_two_tv"
                                app:layout_constraintTop_toTopOf="@id/home_top_card_two_tv"
                                app:layout_constraintBottom_toBottomOf="@id/home_top_card_two_tv"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/home_top_card_third"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/timetable_border"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/home_top_card_third_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/home_top_card_doto"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/home_top_card_third_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="오늘의 할일"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/home_top_card_third_icon"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/home_top_card_third_explain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7월 10일 (금)"
                            android:textSize="12sp"
                            android:textColor="#297eee"
                            app:layout_constraintStart_toStartOf="@id/home_top_card_third_title"
                            app:layout_constraintTop_toBottomOf="@id/home_top_card_third_title" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/home_top_card_third_add"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/home_top_border"
                            android:layout_marginTop="10dp"
                            android:padding="6dp"
                            app:layout_constraintStart_toEndOf="@id/home_top_card_third_icon"
                            app:layout_constraintTop_toBottomOf="@id/home_top_card_third_explain">

                            <TextView
                                android:id="@+id/home_top_card_third_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="추가"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="7dp"
                                app:layout_constraintTop_toTopOf="parent" />
                            <ImageView
                                android:id="@+id/home_top_card_third_plus"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/home_top_plus"
                                app:layout_constraintStart_toEndOf="@id/home_top_card_third_tv"
                                app:layout_constraintTop_toTopOf="@id/home_top_card_third_tv"
                                app:layout_constraintBottom_toBottomOf="@id/home_top_card_third_tv"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/home_top_card_third_inf"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/home_top_border"
                            android:padding="6dp"
                            app:layout_constraintStart_toEndOf="@id/home_top_card_third_add"
                            app:layout_constraintTop_toTopOf="@id/home_top_card_third_add"
                            app:layout_constraintBottom_toBottomOf="@id/home_top_card_third_add">

                            <TextView
                                android:id="@+id/home_top_card_third_inf_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="전체 보기"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="7dp"
                                app:layout_constraintTop_toTopOf="parent" />
                            <ImageView
                                android:id="@+id/home_top_card_third_more"
                                android:layout_width="10dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/home_detail"
                                app:layout_constraintStart_toEndOf="@id/home_top_card_third_inf_tv"
                                app:layout_constraintTop_toTopOf="@id/home_top_card_third_inf_tv"
                                app:layout_constraintBottom_toBottomOf="@id/home_top_card_third_inf_tv"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_icon_schoolhome"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="30dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/home_icon_schoolhome"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_icon_shuttlebus"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/home_icon_schoolhome">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/home_icon_shuttlebus"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_icon_notice"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/home_icon_shuttlebus">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/home_icon_notice"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_icon_schedule"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/home_icon_notice">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/home_icon_schedule"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_icon_library"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/home_icon_schedule">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/home_icon_library"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_icon_webmail"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/home_icon_library">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/home_icon_webmail"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardElevation="0dp">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:riv_corner_radius="10dp"
                        android:src="@drawable/home_middle_ad"/>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_middle_favorite_community"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_middle_favorite_community_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="즐겨찾는 게시판"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>
                    <ImageView
                        android:id="@+id/home_middle_favorite_community_arrow"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/home_middle_favorite_community_more"
                        app:layout_constraintBottom_toBottomOf="@id/home_middle_favorite_community_more"
                        android:src="@drawable/home_middle_favorite_commu_arrow"
                        android:layout_marginEnd="10dp"/>
                    <TextView
                        android:id="@+id/home_middle_favorite_community_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/home_middle_favorite_community_arrow"
                        android:text="더 보기"
                        android:textColor="@color/bottomview_select"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_middle_favorite_community_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:overScrollMode="never"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_middle_favorite_community_tv" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_middle_realtime_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_middle_realtime_article_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="실시간 인기글"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_realtime_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:overScrollMode="never"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_middle_realtime_article_tv" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_middle_advertisement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_middle_advertisement_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="추천 정보"
                        android:textSize="18sp"
                        android:textColor="#000000"
