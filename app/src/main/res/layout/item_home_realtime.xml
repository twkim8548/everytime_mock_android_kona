<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/home_realtime_img"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/favorite_myprofiel"/>

    <TextView
        android:id="@+id/home_realtime_writer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/home_realtime_img"
        app:layout_constraintTop_toTopOf="@id/home_realtime_img"
        app:layout_constraintBottom_toBottomOf="@id/home_realtime_img"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#1c1c1c"
        android:text="익명"/>
    <TextView
        android:id="@+id/home_realtime_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_realtime_img"
        app:layout_constraintStart_toStartOf="@id/home_realtime_img"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="실시간 인기 글 내용"/>
    <TextView
        android:id="@+id/home_realtime_inf_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_realtime_content_tv"
        app:layout_constraintStart_toStartOf="@id/home_realtime_img"
        android:textSize="13sp"

        android:textColor="@color/myPageBlack"
        android:text="실시간 인기 글 내용"/>
    <TextView
        android:id="@+id/home_realtime_content_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_realtime_inf_tv"
        app:layout_constraintStart_toStartOf="@id/home_realtime_img"
        android:textSize="12sp"
        android:text="게시판 이름"/>
    <TextView
        android:id="@+id/home_realtime_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/idpw_gray"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/home_realtime_img"
        app:layout_constraintBottom_toBottomOf="@id/home_realtime_img"
        android:text="07/04 12:04"/>

    <TextView
        android:id="@+id/home_realtime_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#319fa8"
        android:textSize="12sp"
        android:text="22"/>
    <ImageView
        android:id="@+id/home_realtime_comment_img"
        android:layout_width="20dp"
        android:layout_height="15dp"
        app:layout_constraintEnd_toStartOf="@id/home_realtime_comment_tv"
        app:layout_constraintTop_toTopOf="@id/home_realtime_comment_tv"
        app:layout_constraintBottom_toBottomOf="@id/home_realtime_comment_tv"
        android:src="@drawable/home_hot_comment"/>
    <TextView
        android:id="@+id/home_realtime_good_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/home_realtime_comment_img"
        app:layout_constraintTop_toTopOf="@id/home_realtime_comment_tv"
        app:layout_constraintBottom_toBottomOf="@id/home_realtime_comment_tv"
        android:text="43"
        android:textSize="12sp"
        android:textColor="@color/bottomview_select"
        android:layout_marginEnd="8dp"/>
    <ImageView
        android:id="@+id/home_realtime_good_img"
        android:layout_width="20dp"
        android:layout_height="15sp"
        app:layout_constraintEnd_toStartOf="@id/home_realtime_good_tv"
        app:layout_constraintTop_toTopOf="@id/home_realtime_comment_tv"
        app:layout_constraintBottom_toBottomOf="@id/home_realtime_comment_tv"
        android:src="@drawable/home_hot_good" />

</androidx.constraintlayout.widget.ConstraintLayout>