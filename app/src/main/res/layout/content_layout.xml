<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_topbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_arrow_const"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@id/content_name_tv"
            app:layout_constraintBottom_toBottomOf="@id/content_name_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp">
            <ImageView
                android:id="@+id/content_arrow_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mypage_arrow"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/content_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/content_arrow_const"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:text="게시판이름"/>
        <FrameLayout
            android:id="@+id/content_option"
            android:layout_width="43dp"
            android:layout_height="43dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_margin="9dp"
                android:scaleType="fitXY"
                android:src="@drawable/content_option_img" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/content_search"
            android:layout_width="43dp"
            android:layout_height="43dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/content_option"
            android:layout_marginTop="1dp"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_margin="9dp"
                android:scaleType="fitXY"
                android:src="@drawable/home_frag_search" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/content_refresh"
            android:layout_width="43dp"
            android:layout_height="43dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/content_search"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="5dp"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_margin="9dp"
                android:scaleType="fitXY"
                android:src="@drawable/content_refresh_img" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/content_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_topbar"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>