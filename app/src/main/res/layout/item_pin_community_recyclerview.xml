<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pin_community_const"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/pin_community_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginStart="15dp"
            android:src="@drawable/community_pin"/>
        <TextView
            android:id="@+id/pin_community_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/pin_community_img"
            app:layout_constraintTop_toTopOf="@id/pin_community_img"
            app:layout_constraintBottom_toBottomOf="@id/pin_community_img"
            android:text="게시판 이름"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="25dp"/>
        <ImageView
            android:id="@+id/pin_community_new"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toEndOf="@id/pin_community_tv"
            app:layout_constraintTop_toTopOf="@id/pin_community_img"
            app:layout_constraintBottom_toBottomOf="@id/pin_community_img"
            android:layout_marginStart="10dp"
            android:src="@drawable/favorite_community_new"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>