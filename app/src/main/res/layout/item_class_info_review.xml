<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/class_info_review_star_img"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:src="@drawable/class_select_star_img"
        android:layout_marginTop="5dp"
        android:scaleType="fitStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/class_info_review_writer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/class_info_review_star_img"
        app:layout_constraintTop_toBottomOf="@id/class_info_review_star_img"
        android:text="글 작성자"/>
    <ImageView
        android:id="@+id/class_info_review_report_btn"
        android:layout_width="40dp"
        android:layout_height="33dp"
        app:layout_constraintTop_toTopOf="@id/class_info_review_like_btn"
        app:layout_constraintBottom_toBottomOf="@id/class_info_review_like_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/class_info_review_report_img"/>
    <ImageView
        android:id="@+id/class_info_review_like_btn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/class_info_review_star_img"
        app:layout_constraintEnd_toStartOf="@id/class_info_review_report_btn"
        android:layout_marginEnd="5dp"
        android:src="@drawable/class_info_review_like"/>
    <TextView
        android:id="@+id/class_info_review_contents_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@id/class_info_review_star_img"
        app:layout_constraintTop_toBottomOf="@id/class_info_review_writer_tv"
        android:text="리뷰내용"/>
